<?xml version="1.0" encoding="ASCII" standalone="yes"?>
<message_set>
  <message>
    <name>BISTATIC_MISSION_MESSAGE</name>
    <trigger>publish</trigger>
    <trigger_var>BISTATIC_MISSION</trigger_var>
    <size>32</size>
    <header>
      <id>115</id>
      <dest_id>
        <name>DestinationPlatformId</name>
      </dest_id>
    </header>
    <layout>
      <float>
        <name>ORBIT_RADIUS</name>
        <max>200</max>
        <min>10</min>
        <precision>0</precision>
      </float>
      <float>
        <name>ANGLE_RATE</name>
        <max>0.5</max>
        <min>0</min>
        <precision>3</precision>
      </float>
      <float>
        <name>TARGET_X</name>
        <max>2000</max>
        <min>0</min>
        <precision>0</precision>
      </float>
      <float>
        <name>TARGET_Y</name>
        <max>2000</max>
        <min>0</min>
        <precision>0</precision>
      </float>
    </layout>
    <on_receipt>
       <publish>
        <moos_var>ORBIT_RADIUS</moos_var>
        <message_var>ORBIT_RADIUS</message_var>
       </publish>
       <publish>
        <moos_var>ANGLE_RATE</moos_var>
        <message_var>ANGLE_RATE</message_var>
       </publish>
       <publish>
        <moos_var>BISTATIC_STATION</moos_var>
        <format>BISTATIC_STATION=%1%,%2%</format>
        <message_var>TARGET_X</message_var>
        <message_var>TARGET_Y</message_var>
      </publish>
    </on_receipt>
    <queuing>
      <ack>true</ack>
      <ttl>300</ttl>
      <value_base>10</value_base>
      <max_queue>2</max_queue>
    </queuing>
  </message>
</message_set>
