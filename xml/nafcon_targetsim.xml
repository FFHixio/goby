<?xml version="1.0" encoding="ASCII" standalone="yes"?>
<!-- codec for broadcasting target state for simulators 
     running on nodes --> 
<message_set>
  <message>
    <name>SIM_TARGET</name>
    <destination_moos_var key="dest_id">TGT_STATE_OUT</destination_moos_var>
    <trigger>publish</trigger> <!-- package upon publish to some moos var -->
    <trigger_moos_var>TGT_STATE_OUT</trigger_moos_var>
    <size>32</size>
    <header>
      <id>5</id>
      <time>
        <name>time</name>
      </time>
      <dest_id>
        <name>dest_id</name>
      </dest_id>
    </header>
    <layout>
      <int>
        <name>tgt_x</name>
        <max>100000</max>
        <min>-100000</min>
      </int>
      <int>
        <name>tgt_y</name>
        <max>100000</max>
        <min>-100000</min>
      </int>
      <float>
        <name>tgt_depth</name>
        <precision>1</precision>
        <max>1000</max>
        <min>0</min>
      </float>
      <int>
        <name>tgt_hdg</name>
        <max>359</max>
        <min>0</min>
      </int>
      <float>
        <name>tgt_speed</name>
        <precision>1</precision>
        <max>30</max>
        <min>0</min>
      </float>
      <int>
        <name>tgt_freq</name>
        <max>5000</max>
        <min>0</min>
      </int>
      <int>
        <name>tgt_bw</name>
        <max>1000</max>
        <min>0</min>
      </int>
      <int>
        <name>tgt_spl</name>
        <max>200</max>
        <min>0</min>
      </int>
      <int>
        <name>tn1_freq</name>
        <max>1000</max>
        <min>0</min>
      </int>
      <int>
        <name>tn1_dbl</name>
        <max>200</max>
        <min>0</min>
      </int>
      <int>
        <name>tn2_freq</name>
        <max>1000</max>
        <min>0</min>
      </int>
      <int>
        <name>tn2_dbl</name>
        <max>200</max>
        <min>0</min>
      </int>
      <int>
        <name>tn3_freq</name>
        <max>1000</max>
        <min>0</min>
      </int>
      <int>
        <name>tn3_dbl</name>
        <max>200</max>
        <min>0</min>
      </int>
      <int>
        <name>tn4_freq</name>
        <max>1000</max>
        <min>0</min>
      </int>
      <int>
        <name>tn4_dbl</name>
        <max>200</max>
        <min>0</min>
      </int>
      <int>
        <name>tn5_freq</name>
        <max>1000</max>
        <min>0</min>
      </int>
      <int>
        <name>tn5_dbl</name>
        <max>200</max>
        <min>0</min>
      </int>
      <int>
        <name>src_num</name>
        <max>31</max>
        <min>0</min>
      </int>
    </layout>
    <!-- decoding -->
    <on_receipt>
      <publish>
        <moos_var>TGT_STATE_IN</moos_var>
        <all />
      </publish>
      <publish>
        <moos_var>TARGET_CONTROL</moos_var>
        <format>ON</format>
      </publish>
    </on_receipt>
    <queuing>
      <ack>false</ack>
      <ttl>600</ttl>
      <value_base>5</value_base>
    </queuing>
  </message>
</message_set>
